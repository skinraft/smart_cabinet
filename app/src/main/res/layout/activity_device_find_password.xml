<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/x_login_edit_bg" >

        <TextView
            android:id="@+id/x_code_right"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            android:background="@drawable/x_login_gay_x"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/x_phone_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_toLeftOf="@id/x_code_right"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:hint="手机号"
            android:inputType="phone"
            android:textColor="#A19A9E"
            android:textColorHint="#A19A9E"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/x_login_edit_bg" >

        <EditText
            android:id="@+id/x_code_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:hint="请输入验证码"
            android:inputType="phone"
            android:textColor="#A19A9E"
            android:textColorHint="#A19A9E"
            android:maxLength="4"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/x_login_edit_bg" >

        <EditText
            android:id="@+id/x_password_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:hint="请设置密码"
            android:inputType="textPassword"
            android:textColor="#A19A9E"
            android:textColorHint="#A19A9E"
            android:textSize="14sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/x_login_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/x_login_gay_x"
        android:gravity="center"
        android:text="完  成"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
</LinearLayout>