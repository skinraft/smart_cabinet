<resources>

    <!--<style name="AppBaseTheme" parent="android:Theme.Light">-->
    <!--&lt;!&ndash;-->
    <!--Theme customizations available in newer API levels can go in-->
    <!--res/values-vXX/styles.xml, while customizations related to-->
    <!--backward-compatibility can go here.-->
    <!--&ndash;&gt;-->
    <!--</style>-->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarSize">48dp</item>
        <item name="colorPrimary">#ad1c79</item>
        <item name="colorPrimaryDark">#ad1c79</item>
        <item name="colorAccent">#ad1c79</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="warndialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowAnimationStyle">@style/warndialog.anim</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="warndialog.anim" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/warn_dialog_anim_enter</item>
        <item name="android:windowExitAnimation">@anim/warn_dialog_anim_exit</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>
